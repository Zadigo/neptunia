    "version": "0.2.0",
    "configurations": [
        {
            "name": "Neptunia: Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/__main__.py",
            "console": "integratedTerminal",
            "presentation": {
                "hidden": false,
                "group": "Neptunia",
                "order": 1
            },
            "justMyCode": true
        },
        {
            "name": "Neptunia: Current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "Neptunia",
                "order": 1
            }
        },
    ]
}
